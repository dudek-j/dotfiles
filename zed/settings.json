{
  // Personalize
  "theme": "Dracula",
  "vim_mode": true,
  "autosave": "on_window_change",
  "project_panel": {
    "auto_fold_dirs": false,
    "dock": "left",
    "indent_size": 14,
    "entry_spacing": "standard"
  },
  "indent_guides": {
    "enabled": true
  },
  "show_whitespaces": "boundary",
  "wrap_guides": [80, 100],
  "preferred_line_length": 100,
  // AI
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    }
  },
  // Language specific
  "languages": {
    "Python": {
      "language_servers": ["pyright"],
      "formatter": {
        "external": { "command": "black", "arguments": ["-"] }
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "C": {
      "tab_size": 2
    }
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path_lookup": true,
        "path": "/Users/jakub/.espressif/tools/esp-clang/esp-18.1.2_20240912/esp-clang/bin/clangd",
        "arguments": [
          "--query-driver=/Users/jakub/.espressif/tools/xtensa-esp-elf/esp-14.2.0_20241119/xtensa-esp-elf/bin/xtensa-esp32-elf-*",
          "--background-index"
        ]
      }
    }
  },
  // Hide unnecessary elements
  "toolbar": {
    "quick_actions": true,
    "selections_menu": false
  },
  "chat_panel": { "button": "never" },
  "scrollbar": { "show": "never" },
  "collaboration_panel": { "button": false },
  "notification_panel": { "button": false },
  "git_panel": { "button": false },
  "outline_panel": { "button": false },
  "terminal": { "button": false },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "features": {
    "edit_prediction_provider": "none" // Hides co-pilot button
  }
}
